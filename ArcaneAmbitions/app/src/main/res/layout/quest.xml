<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Quest Title -->
    <TextView
        android:id="@+id/textViewQuestTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Quest Title"
        android:textColor="@color/white"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/completeButton" />

    <TextView
        android:id="@+id/textViewQuestDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quest Description"
        android:textColor="@color/white"
        android:layout_below="@id/textViewQuestTitle"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/completeButton" />

    <TextView
        android:id="@+id/questTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewQuestDescription"
        android:textColor="@color/white"
        android:text="Due: 10 AM"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/completeButton" />

    <Button
        android:id="@+id/completeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/holo_green_light"
        android:text="@string/check"
        android:textColor="@color/green" />

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/completeButton"
        android:layout_alignParentEnd="true"
        android:background="@android:color/holo_red_light"
        android:text="X"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="8dp"
        />
</RelativeLayout>

